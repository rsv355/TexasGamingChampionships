<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

   	<ImageView
   	    android:id="@+id/ivButton00" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:padding="@dimen/padding_views_very_big"
	    android:background="@color/White"
	    android:adjustViewBounds="true"
	    android:src="@drawable/company_logo2" />
    	
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
  
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:orientation="vertical" >
		    
			<ImageView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"	    
			    android:adjustViewBounds="true"
			    android:src="@drawable/home_01" />
		
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/padding_views_big"
			    android:orientation="horizontal" >
			
				<ImageView
				    android:id="@+id/ivButton01" 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:paddingRight="@dimen/padding_views_small"
				    android:adjustViewBounds="true"
				    android:src="@drawable/home_02" />
				
				<ImageView
				    android:id="@+id/ivButton02" 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:paddingLeft="@dimen/padding_views_small"
				    android:adjustViewBounds="true"
				    android:src="@drawable/home_03" />
			</LinearLayout>
			
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/padding_views_big"
			    android:orientation="horizontal" >
			
				<ImageView
				    android:id="@+id/ivButton03" 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:paddingRight="@dimen/padding_views_small"
				    android:adjustViewBounds="true"
				    android:src="@drawable/home_04" />
				
				<ImageView
				    android:id="@+id/ivButton04" 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:paddingLeft="@dimen/padding_views_small"
				    android:adjustViewBounds="true"
				    android:src="@drawable/home_05" />
			</LinearLayout>
			
			<ImageView
			    android:id="@+id/ivButton05" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/padding_views_big"
			    android:layout_gravity="center_horizontal"
			    android:adjustViewBounds="true"
			    android:src="@drawable/home_06" />
		
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/padding_views_big"
			    android:orientation="horizontal" >
			
				<ImageView
				    android:id="@+id/ivButton06" 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:paddingRight="@dimen/padding_views_small"
				    android:adjustViewBounds="true"
				    android:src="@drawable/home_07" />
				
				<ImageView
				    android:id="@+id/ivButton07" 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:paddingLeft="@dimen/padding_views_small"
				    android:adjustViewBounds="true"
				    android:src="@drawable/home_08" />
			</LinearLayout>
			
			<ImageView
			    android:id="@+id/ivButton08" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/padding_views_big"
			    android:layout_gravity="center_horizontal"
			    android:adjustViewBounds="true"
			    android:src="@drawable/home_09" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
